<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvwork"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"/>


    <Button
        android:id="@+id/btn8"
        android:text="8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvwork"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        android:layout_marginLeft="5dp"/>



    <Button
        android:id="@+id/btn7"
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvwork"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        android:layout_marginLeft="5dp"/>


    <Button
        android:id="@+id/btnplus"
        android:text=" +  "
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvwork"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        android:layout_marginLeft="5dp"/>



    <Button
        android:id="@+id/btn6"
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"/>
    <Button
        android:id="@+id/btn3"
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"/>


    <Button
        android:id="@+id/btn5"
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btn4"
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btnmin"
        android:text="-"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:textSize="30sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        android:layout_marginLeft="5dp"/>


    <Button
        android:id="@+id/btn2"
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        android:layout_marginLeft="5dp"/>


    <Button
        android:id="@+id/btn1"
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btnmul"
        android:text="*"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btnmin"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btndot"
        android:text="."
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="50sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btn0"
        android:text="0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_constraintLeft_toRightOf="@id/btndot"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btncom"
        android:text=","
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        android:layout_marginLeft="5dp"/>
    <Button
        android:id="@+id/btndiv"
        android:text="/"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btnmul"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        android:layout_marginLeft="5dp"/>
    <Button
        android:id="@+id/btnclear"
        android:text="c"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:textSize="20sp"
        android:backgroundTint="#FFDC00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btndot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"/>
    <Button
        android:id="@+id/btnequal"
        android:text="="
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintLeft_toRightOf="@id/btnclear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"/>




    <TextView
        android:id="@+id/tvresult"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/tvwork"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="#FF0400 "
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvresult"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

